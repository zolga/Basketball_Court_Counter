<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
    </style>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/black_blur_background</item>
    </style>

    <style name="LinearLayoutRounds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RoundsScoreTop" parent="LinearLayoutRounds">
        <item name="android:layout_marginTop">@dimen/round_scores_layout_margin_top</item>
    </style>

    <style name="RoundsScoreTop.Land" parent="LinearLayoutRounds">
        <item name="android:layout_marginTop">@dimen/round_scores_layout_margin_top_land</item>
    </style>

    <style name="LinearLayoutWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonRoundScore">
        <item name="android:layout_width">@dimen/round_score_size</item>
        <item name="android:layout_height">@dimen/round_score_size</item>
        <item name="android:background">@drawable/circle_red</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ColorTextLightWhite</item>
        <item name="android:textSize">@dimen/round_score_font_size</item>
    </style>

    <style name="ButtonRoundScoreRed" parent="ButtonRoundScore">
        <item name="android:background">@drawable/circle_red</item>
    </style>
    <style name="ButtonRoundScoreGreen" parent="ButtonRoundScore">
        <item name="android:background">@drawable/circle_green</item>
    </style>
    <style name="TextViewTeamName">
        <item name="android:layout_width">@dimen/round_score_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/round_score_team_name_margin_top</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ColorTextLightWhite</item>
        <item name="android:textSize">@dimen/round_score_team_name_font_size</item>
    </style>

    <style name="ViewSeparatorLine">
        <item name="android:layout_width">@dimen/view_width</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ViewSeparatorLine.Land">
        <item name="android:layout_margin">@dimen/view_margin_land</item>
        <item name="android:layout_width">@dimen/view_width_land</item>
    </style>

    <style name="ScrollViewButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/round_scores</item>
    </style>

    <style name="ScrollViewButtonsLand" parent="ScrollViewButtons">
        <item name="android:layout_marginTop">@dimen/score_btn_margin_top_land</item>
    </style>

    <style name="ScoreButtonsWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ScoreButtons" parent="ScoreButtonsWrapper">
        <item name="android:layout_marginTop">@dimen/score_btn_margin_top</item>
    </style>
    <style name="ScoreButtonsLand" parent="ScoreButtonsWrapper">
        <item name="android:layout_marginTop">@dimen/score_btn_margin_top_land</item>
    </style>
    <style name="ButtonsColumnWrapper">
        <item name="android:layout_width">@dimen/score_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/score_btn_margin_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScoreButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/score_btn_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/score_btn_margin_left</item>
        <item name="android:layout_marginRight">@dimen/score_btn_margin_right</item>
        <item name="android:textColor">@color/ColorTextLightWhite</item>
    </style>

    <style name="ScoreButtonRed" parent="ScoreButton">
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="ScoreButtonGreen" parent="ScoreButton">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/reset_btn_margin_bottom</item>
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:paddingLeft">@dimen/reset_btn_padding_left_right</item>
        <item name="android:paddingRight">@dimen/reset_btn_padding_left_right</item>
        <item name="android:textColor">@color/ColorTextLightWhite</item>
    </style>
    <style name="ResetButtonLand" parent="ResetButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/reset_btn_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/reset_btn_margin_top_land</item>
    </style>

</resources>